<%- include("../partials/header") %>

<div>
	<div class="row">
		<h1 class="headings">
			Add a New Album
		</h1>
		<div style="width:30%; margin: 35px auto;">
			<form action="/albums" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Enter the Name of the New Album">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="artist" placeholder="Enter the Artist of the New Album">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" min="0.01" step="0.01" placeholder="Enter the Price of the New Album">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="imgurl" placeholder="Enter the Url of the Image of the New Album">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="des" placeholder="Enter the Description of the New Album">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Add Album
					</button>
				</div>
			</form>
			<a class="btn btn-lg btn-danger" href="/albums">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>