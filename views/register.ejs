<%- include("./partials/header") %>

<div class="row">
    <h1 class="headings">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/register" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="Enter the Username You Want">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Enter the Password You Want">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
            </div>
        </form>
        <a class="btn btn-lg btn-danger" href="/albums">Back</a>
    </div>
</div>

<%- include("./partials/footer") %>