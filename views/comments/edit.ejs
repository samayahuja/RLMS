<%- include("../partials/header") %>

<div>
	<div class="row">
		<h1 style="text-align: center;">
			Edit Comment
		</h1>
		<div style="width:30%; margin: 35px auto;">
			<form action="/albums/<%= album_id %>/comments/<%= comment._id %>?_method=put" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Update Comment
					</button>
				</div>
			</form>
			<a class="btn btn-lg btn-danger" href="/albums">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>