<%- include("../partials/header") %>

<div>
	<div class="row">
		<h1 style="text-align: center;">
			Add New Comment to <%= album.name %>
		</h1>
		<div style="width:30%; margin: 35px auto;">
			<form action="/albums/<%= album._id %>/comments" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Enter the Comment">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit!
					</button>
				</div>
			</form>
			<a class="btn btn-lg btn-danger" href="/albums">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>